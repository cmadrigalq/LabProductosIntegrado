<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaProductos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layBuscNombreA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lblLayout"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblBuscNombreA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Nombre"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Nombre:" />

                <TextView
                    android:id="@+id/lblBuscTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Tipo"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Tipo:" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txLayout"
                android:layout_width="428dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txBuscNombreA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="text" />

                <Spinner
                    android:id="@+id/spinTipo"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buscar"
                    android:drawableRight="@android:drawable/ic_search_category_default"
                    tools:text="Buscar" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNuevoProducto"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="fill_parent"
                android:layout_height="144dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:drawableRight="@android:drawable/ic_menu_add"
                android:text="Nuevo"
                tools:text="Nuevo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:stretchColumns="*">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <HorizontalScrollView
                    android:id="@+id/horizontalView"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal|vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dip">
                    <TableLayout
                        android:id="@+id/idTableProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/tableborder"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/tableborder"
                            android:backgroundTint="#b6c2d6">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@drawable/tableborder"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="Nombre"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@drawable/tableborder"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="Precio Final"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@drawable/tableborder"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="Acciones"
                                android:layout_span="2"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                        </TableRow>
                    </TableLayout>
                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>